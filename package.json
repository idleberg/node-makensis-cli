{
  "name": "makensis-cli",
  "version": "0.12.2",
  "description": "CLI for the Node.js makensis wrapper, compiles NSIS scripts",
  "main": "./bin/mn.js",
  "bin": {
    "mn": "./bin/mn.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/node-makensis-cli.git"
  },
  "keywords": [
    "nsis",
    "makensis",
    "cli"
  ],
  "license": "MIT",
  "dependencies": {
    "@nsis/language-data": "^0.7.1",
    "commander": "^2.20.0",
    "generator-nsis": "^0.8.2",
    "makensis": "^0.18.1",
    "update-notifier": "^3.0.1",
    "yeoman-environment": "^2.4.0"
  },
  "devDependencies": {
    "@types/node": "^12.6.2",
    "husky": "^3.0.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "build": "tsc --pretty --project ./",
    "dev": "tsc --watch --pretty --project ./",
    "lint": "tslint --project .",
    "prepublishOnly": "tslint --project . && npm run build",
    "test": "npm run lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
